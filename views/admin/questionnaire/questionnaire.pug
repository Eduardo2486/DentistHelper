doctype html lang="es"
head
	meta(charset="UTF-8")
	meta(name="viewport" content="width=device-width,initial-scale=1")
	meta(http-equiv="X-UA-Compatible" content="ie=edge")
	title Questionnaires
	link(rel="stylesheet", href="../../assets/css/normalize.css")
	link(rel="stylesheet", href="../../assets/css/milligram.css")
	link(rel="stylesheet", href="../../assets/fonts/css/nucleo.css")
	link(rel="stylesheet", href="../../assets/css/headers.css")
	link(rel="stylesheet", href="../../assets/css/styleA.css")
	include ../partials/navbar.pug
	include ../partials/header.pug
	main.main
		section.container
			.row
				.column
					.content-container
						.action-buttons
							a.link-button(href="/admin-8E4145/questionnaire/newquestionnaire")
								i.ni.ni-fat-add
								| New questionnaire
						.container-posts
							if data.length > 0
								table.table
									thead
										tr
											th Title
											th Description
											th Number of questions
									tbody
										- let questions = data;
										each question in questions
											tr
												td
													a(href="/admin-8E4145/questionnaire/edit/"+question.id) #{question.title}
												td #{question.description}
												- let questionsLength = Object.keys(JSON.parse(question.questions)).length;
												td #{questionsLength}
                                                
							else
								h2(style="text-align:center;margin-top:40px;") You don't have questionnaires
	script.