doctype html lang="es"
head
	meta(charset="UTF-8")
	meta(name="viewport" content="width=device-width,initial-scale=1")
	meta(http-equiv="X-UA-Compatible" content="ie=edge")
	title New user
	link(rel="stylesheet", href="../../../../assets/css/normalize.css")
	link(rel="stylesheet", href="../../../../assets/css/milligram.css")
	link(rel="stylesheet", href="../../../../assets/fonts/css/nucleo.css")
	link(rel="stylesheet", href="../../../../assets/css/headers.css")
	link(rel="stylesheet", href="../../../../assets/css/styleA.css")
	style.
		span{
			font-size:1.9rem;
		}
		input[type="text"]{
			max-width: 200px;
			border: 0px;
			border-bottom-color: currentcolor;
			border-bottom-style: none;
			border-bottom-width: 0px;
			border-bottom: 1px solid #606c76;
			border-radius: 0;
			padding: 0px;
			padding-bottom: 0px;
			height: 2.2rem;
			font-size: 1.8rem;
			margin-left: 7px;
			padding-bottom: 5px;
			margin-bottom: 5px;
		}
	include ../partials/navbar.pug
	include ../partials/header.pug
	main.main
		section.container
			.row
				.column.column-50
					h2 Add new user
					form(action='/admin-8E4145/users/addnewuser', method='POST')
						.container-field
							span Name:
							input(type="text" placeholder="Name" name="firstname")
						.container-field
							span Last name:
							input(type="text" placeholder="Last name" name="lastname")
						.container-field
							span Password:
							input(type="password" placeholder="Password" name="password")
						.container-field
							span Email:
							input(type="text" placeholder="Email" name="email")
						.container-field
							span Gender:
							select(name="gender")
								option(value="male") Male
								option(value="female") Female
								option(value="other") Other
						.container-field
							span Birthday:
							input(type="text" placeholder="YYYY/MM/DD" name="birthday")
						.container-field
							span Number phone:
							input(type="text" placeholder="Number phone" name="phone")
							input(type="hidden" value="dentist" name="privileges")
						button(type="submit") Save